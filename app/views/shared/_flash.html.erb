<% if flash[:notice] %>
  <div class="alert alert-info mt-4" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>
<% if flash[:error] %>
  <div class="alert alert-danger mt-4" role="alert">
    <% flash[:error].each do |error| %>
      <div>
        <%= error %>
      </div>
    <% end %>
  </div>
<% end %>
